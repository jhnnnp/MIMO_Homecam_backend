# ========================================
# MIMO Camera Backend Environment Variables
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=4001

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL Database (기존 데이터베이스 사용)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=5010
DB_NAME=mimo_homecam_db

# ========================================
# CORS CONFIGURATION
# ========================================
# 개발 환경: 자동 설정
# 프로덕션: 실제 도메인만 허용
CORS_ORIGIN=https://mimo-camera.com,https://www.mimo-camera.com

# ========================================
# JWT SECURITY
# ========================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_64_character_access_secret_here
JWT_REFRESH_SECRET=your_64_character_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# AWS S3 STORAGE
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2
AWS_BUCKET_NAME=your-mimo-media-bucket
AWS_FOLDER_PREFIX=videos/

# ========================================
# GOOGLE OAUTH 2.0
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4001/auth/google/callback

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ========================================
# MEDIA SERVER
# ========================================
MEDIA_SERVER_HOST=localhost
MEDIA_SERVER_PORT=4002
# 고정 URL 사용시 설정 (예: wss://media.example.com)
# MEDIA_SERVER_URL=

# 미디어 URL 보안 토큰 (HMAC-SHA256) 설정
# 토큰 만료 시간(ms). 기본 60000(60초)
MEDIA_TOKEN_SECRET=change_this_to_secure_random_string
MEDIA_TOKEN_MAX_AGE_MS=60000

# ========================================
# QR CODE SECURITY
# ========================================
# QR 코드 보안 서명용 시크릿 키
QR_SECRET=mimo_qr_secret_key_change_me