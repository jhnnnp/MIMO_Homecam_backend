# ========================================
# MIMO Camera Backend Environment Variables
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=4001

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=5010
DB_NAME=mimo_homecam_db

# ========================================
# JWT SECURITY
# ========================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_64_character_access_secret_here
JWT_REFRESH_SECRET=your_64_character_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# AWS S3 STORAGE
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2
AWS_BUCKET_NAME=your-mimo-media-bucket
AWS_FOLDER_PREFIX=videos/

# ========================================
# GOOGLE OAUTH 2.0
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4001/auth/google/callback

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Gmail SMTP (App Password 사용)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=jhnnn.park@gmail.com
SMTP_PASS=teiy ktgs gpdh cscv

# ========================================
# SECURITY & RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_GOOGLE_OAUTH=true
ENABLE_SMS_VERIFICATION=false 

